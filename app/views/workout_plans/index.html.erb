<div class="container plans-container">
  <div class="split-container">
    <h1 class="section-title">Most Popular</h1>
    <% @workout_plans.each do |plan| %>
      <div class="plan-container">
        <div class="plan-image">
        </div>
        <div class="plan-content">
          <div class="plan-description">
            <span><%= plan.description %></span>
          </div>
          <div class="plan-cta">
            <span class="plan-title"><%= link_to plan.name, workout_plan_workouts_path(plan) %></span>

              <%= link_to follow_workout_plan_path(plan, follow: true), class: 'plan-follow-button', method: :post do %>
                Follow
              <% end %>

          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="split-container">
    <h1 class="section-title">Newest</h1>
    <% @workout_plans.each do |plan| %>
      <div class="plan-container">
        <div class="plan-image">
        </div>
        <div class="plan-content">
          <div class="plan-description">
            <span><%= plan.description %></span>
          </div>
          <div class="plan-cta">
            <span class="plan-title"><%= link_to plan.name, workout_plan_workouts_path(plan) %></span>

              <%= link_to follow_workout_plan_path(plan, follow: true), class: 'plan-follow-button', method: :post do %>
                Follow
              <% end %>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

  <%= link_to 'New Workout Plan', new_workout_plan_path %>
