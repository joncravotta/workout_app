<%= form_for @workout_plan do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :summary %>
  <%= f.text_field :summary %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description, rows: 10 %>
  <%= f.submit (@workout_plan.new_record? ? 'Create Workout Plan' : 'Edit Workout Plan') %>
<% end %>
