<div class="content-container">
  <div class="container plans-container">
    <div class="split-container">
      <div class="crumbs-link">
        <%= link_to 'Following', home_profile_path, class: 'crumbs-active' %> | <%= link_to 'Created', home_created_path %> | <%= link_to 'Profile', edit_user_registration_path %>
      </div>
      <h1 class="section-title">Your plans</h1>
      <% if @following.length < 1 %>
        <p class="primary-copy">You arent following any plans</p>
        <%= link_to 'Find Plans', workout_plans_path, class: 'primary-button' %>
      <% else %>
        <% @following.each do |follow| %>
          <%= link_to workout_plan_workouts_path(follow) do %>
            <div class="plan-container">
              <div class="plan-image">
                <%= image_tag(follow.workout_plan.picture.url) if follow.workout_plan.picture? %>
              </div>
              <div class="plan-content">
                <div class="plan-name">
                  <span><%= follow.workout_plan.name %></span>
                </div>
                <div class="plan-description">
                  <%= follow.workout_plan.description %>
                </div>
                <div class="plan-cta">
                  <%= link_to delete_follow_workout_plan_path(follow.id), class: 'plan-follow-button unfollow-button', method: :post do %>
                  Unfollow
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <div class="split-container">
    </div>
  </div>
</div>
