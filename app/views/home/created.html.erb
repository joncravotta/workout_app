<div class="content-container">
  <div class="container plans-container">
    <div class="split-container">
      <div class="crumbs-link">
        <%= link_to 'Following', home_profile_path %> | <%= link_to 'Created', home_created_path, class: 'crumbs-active' %>
      </div>
      <h1 class="section-title">Your created plans</h1>
      <% if @workout_plans.length < 1 %>
        <p class="primary-copy">You have not created any plans.</p>
        <%= link_to 'Create Plan', new_workout_plan_path, class: 'primary-button' %>
      <% else %>
        <% @workout_plans.each do |plan| %>
          <div class="plan-container">
            <div class="plan-image">
              <%= image_tag(plan.picture.url) if plan.picture? %>
            </div>
            <div class="plan-content">
              <div class="plan-description">
                <p><%= plan.description %></p>
              </div>
              <div class="plan-cta">
                <span class="plan-title"><%= link_to plan.name, workout_plan_workouts_path(plan) %></span>
                <%= link_to dashboard_workout_plan_path(plan), class: 'plan-follow-button' do %>
                  Edit
                <% end %>
                <%= link_to workout_plan_path(plan), class: 'plan-follow-button unfollow-button', method: :delete, data: { confirm: "Are you sure?" } do %>
                  Delete
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="split-container">
    </div>
  </div>
</div>
