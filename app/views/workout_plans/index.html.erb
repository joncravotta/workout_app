<div class="container">
  <h1 class="section-title">Workout plans</h1>
  <% @workout_plans.each do |plan| %>
  <div class="plan-container">
      <div class="plan-image">
        Image
      </div>
      <div class="plan-content">
      <h3><%= link_to plan.name, workout_plan_workouts_path(plan) %></h3>
      <%= plan.description %>
      <%= plan.user_id %>
      <%= link_to follow_workout_plan_path(plan, follow: true), method: :post do %>
        Follow
      <% end %>
    </div>
  </div>
  <% end %>
  <%= link_to 'New Workout Plan', new_workout_plan_path %>
</div>
