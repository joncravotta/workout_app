<div class="dashboard-container margin-top-25px padding-bottom-25px">
<span class="section-title"><%= @workout_plan.name %> plan</span>
<br />
<%= link_to "Edit", edit_workout_plan_path(@workout_plan) %>
<hr>

<table class="margin-25px">
  <tr>
    <th>Day</th>
    <th>Name</th>
    <th>Description</th>
    <th>Edit</th>
    <th>View Sets</th>
    <th>Delete</th>
  </tr>
  <% @workout.each do |w| %>
    <tr>
      <td><%= w.day %></td>
      <td><%= w.name %></td>
      <td><%= w.description %></td>
      <td>
        <%= link_to edit_workout_path(w.id) do %>
          <%= image_tag('edit_dark_icon.png', style: 'width: 20px;') %>
        <% end %>
      </td>
      <td>
        <%= link_to dashboard_workout_path(w.id) do %>
          <%= image_tag('view_icon.png', style: 'width: 25px;') %>
        <% end %>
      </td>
      <td>
        <%= link_to workout_path(w.id), method: :delete, data: { confirm: "Are you sure?" } do %>
          X
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
  <%= link_to new_workout_plan_workout_path(@workout_plan) do %>
    New Workout
  <% end %>
</div>
